import java.io.*;
import java.util.Scanner;


public class FileReader {

	public String[] readTextFile(String fileInformationAddress, String fileName){
		fileInformationAddress = modifyFileAddress(fileInformationAddress);
		int lineNum = readLine(fileInformationAddress+fileName+".txt");
		
		String[] information = new String[lineNum];
		
		lineNum = 0;
		String inputLine = new String("");
		File musicFile = new File(fileInformationAddress,fileName+".txt");
		Scanner input ;
		try {
			input = new Scanner(musicFile);
		}
		
		catch(Exception e) {
			try {
				FileWriter fw = new FileWriter(musicFile);
				fw.close();
			} 
			catch (IOException e1) {
				e1.printStackTrace();
			}
			return null;
		}
		
		while(input.hasNext()){
			inputLine = input.nextLine();
			if(inputLine.startsWith("//")||(inputLine.trim()).equals("")) continue; // 주석 또는 빈 줄
			information[lineNum] = inputLine;
			lineNum++;
		}
		input.close();
		
		return information;
	}
	
	private int readLine(String musicFile){
		int lineNum = 0;

		String inputLine = new String("");
		File fileName = new File(musicFile);
		Scanner input ;
		try {
			input = new Scanner(fileName);
		}
		
		catch(Exception e) {
			try {
				FileWriter fw = new FileWriter(fileName);
				fw.close();
			} 
			catch (IOException e1) {
				e1.printStackTrace();
			}
			return 0;
		}
		
		while(input.hasNext()){
			inputLine = input.nextLine();
			if(inputLine.startsWith("//")||(inputLine.trim()).equals("")) continue; // 주석 또는 빈 줄
			lineNum++;
		}
		input.close();

		return lineNum;
	}
	
	private String modifyFileAddress(String fileName){
		String modifiedAddress = "";
		String[] partOfAddress = fileName.split("\\");
		for(int i=0; i<partOfAddress.length - 1; i++){
			modifiedAddress = modifiedAddress + partOfAddress[i] + "\\";
		}
		modifiedAddress += partOfAddress[partOfAddress.length];
		
		return modifiedAddress;
	}
}


